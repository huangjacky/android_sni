<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <Button
            android:text="NO SNI"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="141dp"/>
    <Button
            android:text="SNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginTop="51dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:layout_marginEnd="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <Button
            android:text="huaweicloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp"/>

</android.support.constraint.ConstraintLayout>